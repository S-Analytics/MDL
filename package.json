{
  "name": "mdl",
  "version": "1.0.0",
  "description": "Metrics Definition Library - Store and manage metric definitions with OPA policy support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mdl": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "cli": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "load:samples": "node scripts/load-sample-metrics.js",
    "db:setup": "node scripts/setup-database.js",
    "db:load": "node scripts/load-sample-data-postgres.js",
    "db:clean": "node scripts/clean-sample-data-postgres.js",
    "storage:clean": "node scripts/clean-local-storage.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "metrics",
    "definitions",
    "OPA",
    "policy",
    "governance",
    "dashboard"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "docx": "^9.5.1",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
